mixin docs()
	-
		let docs = [
			{
				type: 'pdf',
				title: 'Заголовок документа для скачивания в две строчки очень длинное',
			},
			{
				type: 'doc',
				title: 'Заголовок документа для скачивания',
			},
			{
				type: 'xls',
				title: 'Заголовок документа',
			},
			{
				type: 'pdf',
				title: 'Заголовок документа для скачивания',
			},
		];

	.docs&attributes(attributes)
		.docs__body(
			x-data="swiperCards"
			x-effect="effect"
			x-bind:class="{swiper: !$store.isDesktop}"
			x-ref="swiper"
		)
			.grid-lg-up(
				x-bind:class=`{'swiper-wrapper': !$store.isDesktop}`
			)
				each doc in docs
					+doc-item(doc).doc-item--lg.docs__item(
						class=[
							'column-span-3-lg-up',
							'column-5-lg-down',
							'column-6-md-down',
							'column-10-sm-down',
						]
						x-bind:class="{'swiper-slide': !$store.isDesktop}"
					)
