include ../swiper-fraction/swiper-fraction
include ../event-item/event-item

mixin events-slider(type)
	include ../events/data

	-
		let items = data(type, 3, true);

	+swiper-fraction().events-slider&attributes(attributes)
		.events-slider__main
			.swiper.events-slider__main-inner(x-ref="swiper")
				.swiper-wrapper
					each item in items
						+event-item(item).swiper-slide.events-slider__item(class=[
							'column-9',
							'column-6-lg-down',
							'column-10-md-down',
							'column-12-sm-down',
						])
