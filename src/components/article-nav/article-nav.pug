mixin article-nav({backUrl = "", items} = {})
	nav.article-nav(
		x-data="articleNav"
		x-on:popstate.window="hash = location.hash"
		x-on:scroll.window.debounce.100ms="update"
	)&attributes(attributes)
		+button-arrow({
			dir: 'left',
			content: "'Назад'",
		}).article-nav__back(href=backUrl)
		if items
			.article-nav__items
				each item in items
					a.article-nav__item(
						href=item.url
						x-bind:class="{'is-active': $el.hash === hash}"
					)= item.content
