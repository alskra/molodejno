extends ../../pug/base
include ../../components/header/header
include ../../components/footer/footer

include ../../components/section-nav/section-nav
include ../../components/filters/filters
include ../../components/grants/grants

include ../../components/section/section

append variables
	-
		title = `${title} - Гранты получили`;

block app
	+header()

	main.app__main
		+container().app__breadcrumbs
			+breadcrumbs(['Гранты получили'])

		+section({
			type: 'grants',
			title: 'Гранты получили',
			advanced: true,
			withoutImage: true,
		})
			+container().section__grid
				aside.section__grid-aside
					+section-nav([
						{
							url: 'grants.html',
							content: 'Гранты',
							isActive: false,
						},
						{
							url: 'recipients.html',
							content: 'Гранты получили',
							isActive: true,
						},
					])
					+filters([
						{
							content: 'Все',
							quantity: 991
						},
						{
							content: 'Бизнес',
							quantity: 132
						},
						{
							content: 'Образование',
							quantity: 53
						},
						{
							content: 'HR',
							quantity: 4
						},
						{
							content: 'Производство',
							quantity: 8
						},
						{
							content: 'Творчество',
							quantity: 76
						},
					])

				.section__grid-main
					+content()
						+grants('recipients')

	+footer()
