append variables
	-
		title = `${title} - Форум`;

block app
	+header()

	main.app__main
		+article({type: 'forum'})
			aside.article__grid-aside
				+article-nav({
					backUrl: 'forums.html',
					items: [
						{
							url: '#card',
							content: 'Направление',
						},
						{
							url: '#about',
							content: 'О событии',
						},
						{
							url: '#teasers',
							content: 'Основые вопросы форума',
						},
						{
							url: '#program',
							content: 'Программа форума',
						},
						{
							url: '#gallery',
							content: 'Фотогалерея',
						},
						{
							url: '#reviews',
							content: 'Отзывы',
						},
						{
							url: '#partners',
							content: 'Партнеры',
						},
						{
							url: '#persons',
							content: 'Наши люди',
						},
						{
							url: '#contacts',
							content: 'Контактная информация',
						},
					]
				})

			.article__grid-main
				+content()
					+card-details('forum').article__card-details
					.article__bg

					+subsection({
						offsetColumn: 'all',
						anchor: 'about',
						title: 'О форуме',
					})
