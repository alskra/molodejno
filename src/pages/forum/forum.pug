								реализацией молодёжной политики во всех актуальных и действующих направлениях данной
								отрасли.
								Это информационно-познавательный портал для молодёжи.

					+subsection({
						offsetColumn: 'all',
						anchor: 'teasers',
						title: 'Основые вопросы форума',
					})
						+teasers()

					+subsection({
						offsetColumn: 'all',
						anchor: 'program',
						title: 'Программа форума',
					})
						+subsection-section({title: 'Программа'})
							+stages()

						+subsection-section({title: 'Документы'})
							+docs()

					+subsection({
						offsetColumn: 'all',
						anchor: 'gallery',
						title: 'Форум в 2020',
					})
						+gallery()

					+subsection({
						offsetColumn: 'all',
						anchor: 'reviews',
						type: 'reviews',
						extType: 'forums',
						title: 'Отзывы',
					})
						+reviews()

					+subsection({
						offsetColumn: 'all',
						anchor: 'partners',
						title: 'Партнеры',
					})
						+subsection-section({title: 'Генеральные партнеры'})
							+partners(true)

						+subsection-section({title: 'Информационные партнеры'})
							+partners()

						+subsection-section({title: 'Организационные партнеры'})
							+partners()

					+subsection({
						offsetColumn: 'all',
						anchor: 'persons',
						title: 'Наши люди',
					})
						+cards({
							type: 'persons',
							slice: 6,
						})

					+subsection({
						offsetColumn: 'all',
						anchor: 'contacts',
						title: 'Контакты',
					})
						+contacts()

	+footer()
