extends ../../pug/base

include ../../components/header/header
include ../../components/footer/footer

include ../../components/tags/tags
include ../../components/infographic/infographic
include ../../components/quote/quote
include ../../components/gallery-slider/gallery-slider
include ../../components/teasers/teasers
include ../../components/stages/stages
include ../../components/docs/docs
include ../../components/gallery/gallery
include ../../components/reviews/reviews
include ../../components/partners/partners
include ../../components/cards/cards
include ../../components/contacts/contacts

include ../../components/subsection-section/subsection-section

include ../../components/article-nav/article-nav
include ../../components/card-details/card-details
include ../../components/subsection/subsection

include ../../components/article/article

append variables
	-
		title = `${title} - Форум`;

block app
	+header()

	main.app__main
		+article({type: 'forum'})
			aside.article__grid-aside
				+article-nav({
					backUrl: 'forums.html',
					items: [
						{
							url: '#card',
							content: 'Направление',
						},
						{
							url: '#about',
							content: 'О событии',
						},
						{
							url: '#teasers',
							content: 'Основые вопросы форума',
						},
						{
							url: '#program',
							content: 'Программа форума',
						},
						{
							url: '#gallery',
							content: 'Фотогалерея',
						},
						{
							url: '#reviews',
							content: 'Отзывы',
						},
						{
							url: '#partners',
							content: 'Партнеры',
						},
						{
							url: '#persons',
							content: 'Наши люди',
						},
						{
							url: '#contacts',
							content: 'Контактная информация',
						},
					]
				})

			.article__grid-main
				+content()
					+card-details().article__card-details
						+breadcrumbs([
							{
								url: 'forums.html',
								content: 'Форумы',
							},
							'Новгородский форум',
						]).card-details__breadcrumbs

						+heading().card-details__title Новгородский форум

						.card-details__info
							.card-details__info-column
								+date('26.10.2020', '30.10.2020', true)
							.card-details__info-column
								+location('Тёсово-Нетыльский')
								+tags(['Бизнес-мероприятия'])

						.card-details__content
							section.card-details__content-column
								+content-edited().card-details__content-item
									h2.h5 Участникам
									table
										tr
											td Место
											td.
												г. Великий Новгород, БЦ&nbsp;Молодость и&nbsp;жизнь, ул. Название улицы,
												123, стр&nbsp;2, корп&nbsp;А
										tr
											td Организатор
											td
												| Ресурсный молодёжный центр
												br
												a(href="mailto:site@info.ru") site@info.ru

							section.card-details__content-column
								+content-edited().card-details__content-item
									h2.h5 Регистрация
									p По вопросам регистрации или участия в мероприятии обращайтесь:
									table
										tr
											td Телефон
											td #[a(href="tel:+74951234567") +7 (495) 123-45-67]
										tr
											td E-mail
											td: a(href="mailto:info@support.ru") info@support.ru
								+button({
									tag: 'a',
									content: "'Подать заявку'",
								}).button--height-sm.card-details__button

					.article__bg

					+subsection({
						offsetColumn: 'all',
						anchor: 'about',
						title: 'О форуме'
					})
						+infographic()
						+content-edited()
							+img-2x()(
								src="../../images/content/article/img-1.jpg"
								width="100%"
							)
							p.
								#[strong Это информационно-познавательный портал для молодёжи Новгородской области],
								занимающийся реализацией молодёжной политики во всех актуальных и действующих
								направлениях данной отрасли.
								Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся
								реализацией молодёжной политики во всех актуальных и действующих направлениях данной
								отрасли.
								Это информационно-познавательный портал для молодёжи.
							p.
								Новгородской области, занимающийся реализацией
								#[strong #[a(href="") молодёжной политики]] во всех актуальных и действующих
								направлениях данной отрасли.

						+quote('Константинопольский А.&nbsp;М.')
							p.
								Сегодня Дом молодёжи&nbsp;&mdash; #[br]это команда профессионалов, которые отвечают
								за&nbsp;основные направления современной молодёжной политики.

						+content-edited()
							p.
								Это информационно-познавательный портал для молодёжи Новгородской области,
								занимающийся реализацией молодёжной политики во всех актуальных и действующих
								направлениях данной отрасли.
								Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся
								реализацией молодёжной политики во всех актуальных и действующих направлениях данной
								отрасли.

						+content-edited()
							h3 HR форум поднимает вопросы
							ul
								li.
									30 октября в Батецком районе будет дан старт областному походу по местам боевых
									сражений. К нему присоединятся активисты военно-патриотических клубов, центров,
									объединений и представители поисковых отрядов Новгородской области.
								li.
									Поход продлится до 1 ноября и будет посвящен боевому пути 1-й Ленинградской
									стрелковой дивизии народного ополчения, которая в июле 1941 года высадилась
									на станции Батецкая и заняла оборону на Лужском рубеже.
								li.
									В первый день участники познакомятся с виртуальной экспозицией, посвященной 1-й
									Кировской дивизии народного ополчения, посетят Исторический памятник
									древнеславянской культуры «Шум-Гора».

						+gallery-slider([
							'../../images/content/gallery-slider/img-1.jpg',
							'../../images/content/gallery-slider/img-2.jpg',
						])

						+content-edited()
							h4 HR форум поднимает вопросы
							p.
								Это информационно-познавательный портал для молодёжи Новгородской области,
								занимающийся реализацией молодёжной политики во всех актуальных и действующих
								направлениях данной отрасли.
								Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся
								реализацией молодёжной политики во всех актуальных и действующих направлениях данной
								отрасли.
								Это информационно-познавательный портал для молодёжи.
							p.
								Новгородской области, занимающийся реализацией
								молодёжной политики во всех актуальных и действующих
								направлениях данной отрасли.

							+video({caption: 'Это информационно-познавательный портал для молодёжи Новгородской области'})

							p.
								Это информационно-познавательный портал для молодёжи Новгородской области,
								занимающийся реализацией молодёжной политики во всех актуальных и действующих
								направлениях данной отрасли.
								Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся
								реализацией молодёжной политики во всех актуальных и действующих направлениях данной
								отрасли.
								Это информационно-познавательный портал для молодёжи.

					+subsection({
						offsetColumn: 'all',
						anchor: 'teasers',
						title: 'Основые вопросы форума'
					})
						+teasers()

					+subsection({
						offsetColumn: 'all',
						anchor: 'program',
						title: 'Программа форума'
					})
						+subsection-section({title: 'Программа'})
							+stages()

						+subsection-section({title: 'Документы'})
							+docs()

					+subsection({
						offsetColumn: 'all',
						anchor: 'gallery',
						title: 'Форум в 2020',
					})
						+gallery()

					+subsection({
						offsetColumn: 'all',
						anchor: 'reviews',
						type: 'reviews',
						extType: 'forums',
						title: 'Отзывы',
					})
						+reviews()

					+subsection({
						offsetColumn: 'all',
						anchor: 'partners',
						title: 'Партнеры',
					})
						+subsection-section({title: 'Генеральные партнеры'})
							+partners(true)

						+subsection-section({title: 'Информационные партнеры'})
							+partners()

						+subsection-section({title: 'Организационные партнеры'})
							+partners()

					+subsection({
						offsetColumn: 'all',
						anchor: 'persons',
						title: 'Наши люди',
					})
						+cards({
							type: 'persons',
							slice: 6,
						})

					+subsection({
						offsetColumn: 'all',
						anchor: 'contacts',
						title: 'Контакты',
					})
						+contacts()

	+footer()
