extends ../../pug/base

include ../../components/header/header
include ../../components/footer/footer

include ../../components/card-info/card-info
include ../../components/article-nav/article-nav
include ../../components/gallery-slider/gallery-slider
include ../../components/gallery/gallery

include ../../components/subsection-section/subsection-section
include ../../components/subsection/subsection
include ../../components/section/section

append variables
	-
		title = `${title} - Реализованный проект`;

block app
	+header()

	main.app__main
		+container().app__breadcrumbs
			+breadcrumbs([
				{
					url: 'releases.html',
					content: 'Реализованные проекты',
				},
				'Поддержка молодежи, оказавшейся в трудной жизненной ситуации',
			])

		+section({
			tag: 'article',
			type: 'projects',
			title: 'Поддержка молодежи, оказавшейся в трудной жизненной ситуации',
			advanced: true,
			withoutImage: true,
		})
			+container().section__grid
				aside.section__grid-aside
					+card-info('release').section__card-info
					+article-nav({
						primary: true,
						backUrl: 'releases.html',
					}).section__article-nav

				.section__grid-main
					+content()
						+gallery-slider([
							'../../images/content/gallery-slider/img-2.jpg',
							'../../images/content/gallery-slider/img-1.jpg',
						])

						+subsection({
							offsetColumn: 'all',
							title: 'О проекте',
						})
							+content()
