extends ../../pug/base
include ../../components/header/header
include ../../components/footer/footer
include ../../components/article-nav/article-nav
include ../../components/card-details/card-details
include ../../components/subsection/subsection
include ../../components/article/article

append variables
	-
		title = `${title} - Грант`;

block body
	+header()

	main.app__main
		+article({type: 'grant'})
			aside.article__aside
				+article-nav({
					backUrl: 'grants.html',
					items: [
						{
							url: '#',
							content: 'Карточка гранта',
						},
						{
							url: '#about',
							content: 'О гранте',
						},
						{
							url: '#stages',
							content: 'Этапы',
						},
						{
							url: '#docs',
							content: 'Документы',
						},
						{
							url: '#recipients',
							content: 'Гранты получили',
						},
						{
							url: '#gallery',
							content: 'Галарея',
						},
						{
							url: '#reviews',
							content: 'Отзывы',
						},
					]
				})

			+card-details().article__card-details
				+breadcrumbs([
					{
						url: 'grants.html',
						content: 'Гранты',
					},
					'Конкурс среди организаций высшего образования',
				]).card-details__breadcrumbs

				h1.heading.card-details__title Конкурс среди организаций высшего образования

				.card-details__info
					.card-details__info-column
						+date('26.10.2020', '30.10.2020', true)
					.card-details__info-column
						+organizer({
							title: 'Ресурсный Молодежный центр',
							image: '../../images/content/projects/logo.png',
						})

				.card-details__content
					section.card-details__content-column
						h2.card-details__content-title Участникам
						.content.card-details__content-item
							table
								tr
									td Сумма гранта
									td до #[span(x-init="$el.innerHTML = (+$el.textContent).toLocaleString('ru') + '&nbsp;&#8381;'") 15000000]
								tr
									td Организатор
									td Ресурсный молодёжный центр
								tr
									td
									td: a(href="mailto:site@info.ru") site@info.ru

					section.card-details__content-column
						h2.card-details__content-title Регистрация
						.content.card-details__content-item
							table
								tr
									td Телефон
									td +7 (495) 123-45-67
								tr
									td E-mail
									td: a(href="mailto:info@support.ru") info@support.ru
						+button({tag: 'a', content: 'Подать заявку'}).card-details__button

			.article__row-outside.article__row-outside--bg

			+subsection({
				offsetColumn: 'all',
				title: 'О гранте'
			}).article__row-outside
				.content
					p.
						Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся реализацией
						молодёжной политики во всех актуальных и действующих направлениях данной отрасли.
						Это информационно-познавательный портал для молодёжи Новгородской области, занимающийся реализацией
						молодёжной политики во всех актуальных и действующих направлениях данной отрасли.
						Это информационно-познавательный портал для молодёжи.
