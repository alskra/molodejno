extends ../../pug/base

include ../../components/header/header
include ../../components/footer/footer

include ../../components/events-slider/events-slider
include ../../components/filters/filters
include ../../components/cards/cards

include ../../components/subsection-section/subsection-section
include ../../components/subsection/subsection
include ../../components/section/section

append variables
	-
		title = `${title} - Афиша`;

block app
	+header()

	main.app__main
		+container().app__breadcrumbs
			+breadcrumbs(['Афиша'])

		+section({
			type: 'playbill',
			title: 'Афиша',
			desc: `<p>Портал для молодёжи занимающийся реализацией молодёжной политики во&nbsp;всех актуальных
и&nbsp;действующих направлениях данной отрасли</p>`,
			score: {
				title: 'Событий',
				number: 10,
			},
			advanced: true,
		})
			+container().section__grid
				+events-slider('playbill').section__events-slider

				aside.section__grid-aside
					+filters([
						{
							content: 'Все',
							quantity: 991
						},
						{
							content: 'Бизнес',
							quantity: 132
						},
						{
							content: 'Образование',
							quantity: 53
						},
						{
							content: 'HR',
							quantity: 4
						},
						{
							content: 'Производство',
							quantity: 8
						},
						{
							content: 'Творчество',
							quantity: 76
						},
					])

				.section__grid-main
					+content()
						+cards({type: 'playbill'})

		+integration()

	+footer()
