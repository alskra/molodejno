extends ../../pug/base
include ../../components/header/header
include ../../components/footer/footer
include ../../components/slider/slider
include ../../components/promo/promo
include ../../components/quote/quote
include ../../components/infographics/infographics
include ../../components/directions/directions
include ../../components/section/section

append variables
	-
		title = 'Молодёжно - Frontend';

block body
	+header().header--no-border-bottom
	main.app__main
		+slider()
		.app__group
			+promo()
			+infographics()
			+quote('Молодёжно')
				p Сегодня Дом молодёжи&nbsp;&mdash; это команда профессионалов, которые отвечают за&nbsp;основные направления современной молодёжной политики.
		+directions()
		+section({
			type: 'forums',
			title: 'Форумы',
			desc: `<p>Портал для молодёжи занимающийся реализацией молодёжной политики во&nbsp;всех актуальных и&nbsp;
				действующих направлениях данной отрасли</p>`,
			score: {
				title: 'Деловых событий',
				number: 100,
			},
		})
		+section({
			type: 'projects',
			title: 'Проекты',
			desc: `<p>Портал для молодёжи занимающийся реализацией молодёжной политики во&nbsp;всех актуальных и&nbsp;
						действующих направлениях данной отрасли</p>`,
			score: {
				title: 'Открытых проектов',
				number: 200,
			},
		})
		+picture-webp('../../images/content/slider/slide-1.jpg', '2x')
	+footer()
