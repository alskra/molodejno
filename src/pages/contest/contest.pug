append variables
	-
		title = `${title} - Конкурс`;

block app
	+header()

	main.app__main
		+article({type: 'contest'})
			aside.article__grid-aside
				+article-nav({
					backUrl: 'contests.html',
					items: [
						{
							url: '#card',
							content: 'Карточка конкурса',
						},
						{
							url: '#about',
							content: 'О конкурсе',
