						+reviews()

					+subsection({
						offsetColumn: 'all',
						anchor: 'partners',
						title: 'Партнеры',
					})
						+subsection-section({title: 'Генеральные партнеры'})
							+partners(true)

						+subsection-section({title: 'Информационные партнеры'})
							+partners()

						+subsection-section({title: 'Организационные партнеры'})
							+partners()

					+subsection({
						offsetColumn: 'all',
						anchor: 'contacts',
						title: 'Контакты',
					})
						+contacts()

	+footer()
