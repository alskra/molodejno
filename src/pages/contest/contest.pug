						},
						{
							url: '#docs',
							content: 'Документы',
						},
						{
							url: '#gallery',
							content: 'Галерея',
						},
						{
							url: '#reviews',
							content: 'Отзывы',
						},
						{
							url: '#partners',
							content: 'Партнеры',
						},
						{
							url: '#contacts',
							content: 'Контакты',
						},
					]
				})

			.article__grid-main
				+content()
					+card-details('contest').article__card-details
					.article__bg

					+subsection({
						offsetColumn: 'all',
						anchor: 'about',
						title: 'О проекте',
					})
						+infographic().infographic--inner

						+content-edited()
