						+gallery-slider([
							'../../images/content/gallery-slider/img-1.jpg',
							'../../images/content/gallery-slider/img-2.jpg',
						])

					+subsection({
						offsetColumn: 'all',
						anchor: 'stages',
						title: 'Этапы',
					})
						+stages()

					+subsection({
						offsetColumn: 'all',
						anchor: 'docs',
						title: 'Документы',
					})
						+docs()

					+subsection({
						offsetColumn: 'all',
						anchor: 'gallery',
						title: 'Галерея',
